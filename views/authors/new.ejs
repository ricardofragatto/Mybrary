<section>
   <div class="container">
      <div class="row">
         <div class="col-12">
            <h2>New Author</h2>
            <form action="/authors" method="POST" class="row">
               <div class="col-12 mt-3">
                  <label for="name">Name</label>
                  <input type="text" id="name" class="form-control" name="name" value="<%= author.name %>">
               </div>
               <div class="col-12 d-flex justify-content-end mt-2">
                  <a href="/authors" class="btn btn-danger">Cancel</a>
                  <button type="submit" class="btn btn-primary ms-2">Create</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</section>